@model Salary
@if (TempData["SuccessMessage"] != null)
{
                <script>
                    $(document).ready(function() {
                        toastr.success('@TempData["SuccessMessage"]');
                    });
                </script>
}

@if (TempData["ErrorMessage"] != null)
{
                <script>
                    $(document).ready(function() {
                        toastr.error('@TempData["ErrorMessage"]');
                    });
                </script>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create new salary</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Add Salary</h3>
                    </div>
                    <!-- /.card-header -->
                    @if (TempData["pesan"] != null)
                    {
                                                                        <script type="text/javascript">
                                                                            window.onload = function () {
                                                                                swal("Good !", '@TempData["pesan"]', "success");
                                                                            };
                                                                        </script>
                    }
                    <!-- form start -->
                    <form asp-controller="Salary" asp-action="Save" method="post">
                        <div class="card-body">
                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                             <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="row">
                                <div class="col-12">
                                    <label for="exampleInputEmail1">Base Salary:</label>
                                    <input type="number" min="1" name="BaseSalary" asp-for=BaseSalary class="form-control" value="@Model.BaseSalary" />
                                    <span asp-validation-for="BaseSalary" class="text-danger"></span>
                                </div>
                                <div class="col-12">

                                    <label for="exampleInputEmail1">Bonuses:</label>
                                    <input type="number" name="Bonuses" asp-for=Bonuses class="form-control" value="@Model.Bonuses" />
                                    <span asp-validation-for="Bonuses" class="text-danger"></span>
                                </div>
                                <div class="col-12">

                                    <label for="exampleInputEmail1">Deductions:</label>
                                    <input type="number" name="Deductions" asp-for=Deductions class="form-control" value="@Model.Deductions" />
                                    <span asp-validation-for="Deductions" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
                                </div>

                                <div class="col-12">
                                    <label for="Month">Month:</label>
                                    <input type="number" name="Month" asp-for="Month" class="form-control" value="@Model.Month" />
                                    <span asp-validation-for="Month" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label for="Year">Year:</label>
                                    <input type="number" name="Year" asp-for="Year" class="form-control" value="@Model.Year" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label for="Notes">Notes:</label>
                                    <textarea name="Notes" asp-for="Notes" class="form-control">@Model.Notes</textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" onclick="return Submit()">Save</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
<script src="~/js/jquery.toaster.js"></script>
